<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.oleksii.simplechat.customviews.LogoView
        android:id="@+id/chat_logo"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_margin="@dimen/def_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chat #297" />

    <TextView
        android:id="@+id/chat_title"
        style="@style/textHighlighted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/def_margin"
        app:layout_constraintBottom_toTopOf="@+id/last_message_text"
        app:layout_constraintStart_toEndOf="@+id/chat_logo"
        app:layout_constraintTop_toTopOf="@+id/chat_logo"
        tools:text="Chat #297" />

    <TextView
        android:id="@+id/last_message_text"
        style="@style/textStandard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/chat_logo"
        app:layout_constraintEnd_toEndOf="@+id/date_time"
        app:layout_constraintStart_toStartOf="@+id/chat_title"
        tools:text="A message which was last received" />

    <TextView
        android:id="@+id/date_time"
        style="@style/textStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/def_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chat_title"
        tools:text="7:55 pm" />

</androidx.constraintlayout.widget.ConstraintLayout>